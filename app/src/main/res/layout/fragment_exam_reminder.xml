<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.main.drawers.FragmentExamReminder">

    <EditText
        android:id="@+id/Time_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:hint="Enter Class reminder Title"
        android:textStyle="bold" />

    <TimePicker
        android:id="@+id/Time_Picker"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:numbersBackgroundColor="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/Set_Time"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/bcg_login_signup"
            android:text="add"
            android:textColor="#fff" />

        <Button
            android:id="@+id/Cancel_Time"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/bcg_login_signup"
            android:text="cancel"
            android:textColor="#fff" />


    </LinearLayout>


</LinearLayout>