<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:layout_gravity="bottom"
    android:background="@drawable/bottom_sheet_background"
    android:backgroundTint="#F4F4F4"
    android:id="@+id/bottom_sheet_options">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <TextView
            android:id="@+id/edit_subject_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Subject"
            android:padding="15dp"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_baseline_book_bottom_nav"
            android:drawablePadding="10dp"
            android:drawableTint="#9876E8"
            android:clickable="true"
            android:textColor="#663CFF"
            android:stateListAnimator="@animator/card_pressed_animator"
            android:foreground="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/delete_subject_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:padding="15dp"
            android:textSize="18dp"
            android:drawableTint="#9876E8"
            android:textColor="#663CFF"
            android:drawableStart="@drawable/ic_baseline_delete_24"
            android:drawablePadding="10dp"
            android:clickable="true"
            android:stateListAnimator="@animator/card_pressed_animator"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="4dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>