<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.BottomNavMainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:title="AppBar"
        app:titleTextAppearance="@style/AppBarTitleTextAppearance"
        android:elevation="0dp"/>




    <FrameLayout
        android:id="@+id/container_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="75dp"
        app:layout_anchor="@id/toolbar_bottom_nav"
        app:layout_anchorGravity="bottom"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_marginBottom="70dp">




    </FrameLayout>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:src="@drawable/fabi_icon_add_drawable"
        app:backgroundTint="@color/colorPrimary"
        app:layout_anchor="@id/bottom_nav_bar"
        app:elevation="10dp"
        app:layout_anchorGravity="center_horizontal"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu"
        android:background="#FFFCFC"
        android:animateLayoutChanges="true"
        android:fitsSystemWindows="true"
        app:elevation="6dp"
        android:padding="5dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>