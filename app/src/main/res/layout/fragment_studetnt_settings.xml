<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Schedule.StudetntSettingsFragment"
    style="@style/CustomModalBottomSheet"
    android:layout_gravity="bottom"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:backgroundTint="@color/bottom_sheet_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/bottom_sheet_bg">

        <TextView
            android:id="@+id/leaveClass_student_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Leave Class"
            android:textAlignment="textStart"
            android:paddingTop="15dp"
            android:drawablePadding="15dp"
            app:layout_constraintTop_toBottomOf="@id/report_bug"
            android:paddingLeft="25dp"
            android:textSize="18dp"
            android:paddingBottom="15dp"
            android:backgroundTint="#E3E1E1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>