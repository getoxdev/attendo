<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_login_signup"
    tools:context=".ui.auth.FragmentForgetPassword">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edittextforgotemail"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="30dp"
        android:text="Forgot Password"
        android:textColor="#fff"
        android:textSize="28dp" />

    <ProgressBar
        android:id="@+id/progresscircular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/edittextforgotemail"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/edittextforgotemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/login_btn_bcg"
        android:hint="Email"
        android:textAlignment="center" />
<Button
    android:id="@+id/submit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="submit"
    android:layout_below="@id/edittextforgotemail"
    android:layout_marginTop="50dp"
    android:background="@drawable/bcg_login_signup"
    android:textColor="#fff"
    android:layout_centerHorizontal="true"/>

</RelativeLayout>